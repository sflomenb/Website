@import variables

html
  position: relative
  min-height: 100%


html, body
  height: 100%


body
  margin-bottom: 60px
  background-color: $background-color
  color: $font-color


.swift
	max-width: 100px !important
	padding-bottom: 10px


nav
  background-color: #272727
  /*padding: 1em 0*/
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 9999
  opacity: 0.95


nav div:not(.all-contact)
  display: flex
  justify-content: flex-end


.left
  margin-right: auto


nav a
  padding: 1em
  margin: 0 20px
  color: #a7a7a7


nav a:hover, nav a:focus
  color: white
  text-decoration: none


nav > div > a
  /*padding: 1em*/
  padding: 1em
  margin: 0 20px



@media (min-width: 1200px)
  nav div
    padding: 0px 10em



#brand-mobile
  display: none


@media (max-width: 768px)
  nav
    flex-direction: column
    padding-top: 17px

  nav div
    flex-direction: column
    align-items: center
    opacity: 0
    transition: all 1s ease
    width: 100%
    height: 0
    visibility: hidden

  nav div a:nth-child(n+3)
    border-top: 1px solid white

  .left
    align-items: center

  input[type=checkbox]:checked ~ div
    opacity: 1
    height: 230px
    visibility: visible
    background-color: #272727

  #menu-toggle, .label-toggle
    display: inline !important
    float: right

  #menu-toggle
    opacity: 0

  #about
    padding-top: 40px

  #hamburger, #close
    width: 20px

  #close *
    fill: #FFF

  .hide
    display: none

  #brand
    display: none

  #brand-mobile
    display: initial


#menu-toggle, .label-toggle
  display: none


a, a:hover
  color: $primary-color


a
  text-decoration: none


a:hover
  text-decoration: underline


body > div:not(:first-of-type), footer
