.contact-methods
  display: flex
  justify-content: space-around
  align-items: center
  margin: auto
  background-color: $secondary-color
  flex-wrap: wrap
  border-radius: 35px
  height: 60px


.twit-svg, .twit-svg path, .git-svg, .git-svg path
  width: inherit
  fill: initial
  color: initial
  background-color: initial
  transition: all 0.4s ease


@media (min-width: 768px)
  .contact-methods
    width: 400px

  div#contact
    min-height: 30%


@media (max-width: 768px)
  .contact-methods
    width: 300px

  div#contact
    min-height: 60%


